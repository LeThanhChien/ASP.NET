@{
    ViewBag.Title = "Xác nhận thanh toán";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f5f7fa;
        font-family: 'Helvetica Neue', sans-serif;
    }

    .confirmation-container {
        max-width: 650px;
        margin: auto;
        background: #ffffff;
        padding: 50px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .confirmation-icon {
        font-size: 80px;
        color: #27ae60;
        margin-bottom: 20px;
    }

    .confirmation-title {
        font-size: 34px;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .confirmation-message {
        font-size: 18px;
        color: #7f8c8d;
    }

    .order-details {
        background: #f7f9fc;
        padding: 20px;
        border-radius: 10px;
        margin-top: 30px;
        text-align: left;
        box-shadow: inset 0 3px 10px rgba(0, 0, 0, 0.05);
    }

        .order-details h5 {
            color: #2980b9;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .order-details div {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
        }

    .btn-custom {
        font-size: 20px;
        padding: 12px 35px;
        border-radius: 50px;
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: #ffffff;
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3);
        transition: all 0.3s ease-in-out;
        text-decoration: none;
        display: inline-block;
        margin-top: 30px;
    }

        .btn-custom:hover {
            background: linear-gradient(135deg, #2c3e50, #3498db);
            box-shadow: 0 8px 25px rgba(52, 152, 219, 0.4);
            transform: scale(1.05);
        }
</style>

<div class="confirmation-container" style="margin-top:100px">
    <!-- Logo MoMo -->
    <img src="~/Content/images1/momo.jpg" alt="MoMo Logo" style="height: 150px; margin-bottom: 50px;" />

    <!-- Icon Thanh Công -->
    <i class="fas fa-check-circle confirmation-icon"></i>

    <!-- Tiêu đề -->
    <h1 class="confirmation-title">Thanh toán thành công!</h1>
    <p class="confirmation-message">Cảm ơn bạn đã sử dụng MoMo!</p>

    <!-- Thông tin đơn hàng -->
    <div class="order-details">
        <h5>Chi tiết đơn hàng</h5>
        <div><span>Mã đơn hàng:</span> <strong>#MOMO-@DateTime.Now.ToString("yyyyMMddHHmmss")</strong></div>
        <div><span>Phương thức thanh toán:</span> <strong>Ví MoMo</strong></div>
        <div><span>Ngày thanh toán:</span> <strong>@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</strong></div>
    </div>

    <!-- Nút hành động -->
    <a href="@Url.Action("Index", "Home")" class="btn-custom">Quay lại Trang chủ</a>
</div>
