@model LeThanhChien_2122110282.Models.HomeModel
@{
    ViewBag.Title = "Trang quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Import Bootstrap & Chart.js -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold text-primary">Bảng điều khiển</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </div>

    <!-- Statistic Boxes -->
    <div class="row mt-4">
        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-lg text-center">
                <div class="card-body">
                    <h2 class="text-success fw-bold">@Model.ProductCount</h2>
                    <p class="text-muted">Tổng sản phẩm</p>
                    <a href="@Url.Action("ProductList", "Product")" class="btn btn-outline-success btn-sm">Xem thêm</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-lg text-center">
                <div class="card-body">
                    <h2 class="text-warning fw-bold">@Model.MemberCount</h2>
                    <p class="text-muted">Thành viên đã đăng ký</p>
                    <a href="@Url.Action("UserList", "User")" class="btn btn-outline-warning btn-sm">Xem thêm</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card border-0 shadow-lg text-center">
                <div class="card-body">
                    <h2 class="text-danger fw-bold">@Model.OrderCount</h2>
                    <p class="text-muted">Đơn hàng</p>
                    <a href="@Url.Action("OrderList", "Order")" class="btn btn-outline-danger btn-sm">Xem thêm</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart Section -->
    <div class="mt-5">
        <canvas id="salesChart"></canvas>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var ctx = document.getElementById("salesChart").getContext("2d");
        var chart = new Chart(ctx, {
            type: "bar",
            data: {
                labels: ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5"],
                datasets: [{
                    label: "Doanh thu (VNĐ)",
                    backgroundColor: "rgba(75, 192, 192, 0.5)",
                    borderColor: "rgba(75, 192, 192, 1)",
                    data: [12000000, 15000000, 17000000, 14000000, 19000000]
                }]
            },
            options: {
                responsive: true
            }
        });
    });
</script>
