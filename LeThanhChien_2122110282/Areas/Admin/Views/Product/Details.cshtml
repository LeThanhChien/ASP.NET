@model LeThanhChien_2122110282.Context.Product

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    body {
        background-color: #f4f5f7;
        font-family: 'Helvetica Neue', sans-serif;
    }

    .details-container {
        max-width: 800px;
        margin: auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 28px;
        font-weight: bold;
        color: #2c3e50;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-radius: 10px;
        overflow: hidden;
        background: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table th {
            background-color: #34495e;
            color: #ffffff;
            font-size: 16px;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f7f9fc;
        }

    .product-image {
        max-width: 120px;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .action-buttons {
        text-align: center;
        margin-top: 20px;
    }

    .btn-custom {
        display: inline-block;
        padding: 12px 24px;
        font-size: 18px;
        border-radius: 8px;
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: #ffffff;
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3);
        text-decoration: none;
        transition: all 0.3s ease-in-out;
        margin: 0 5px;
    }

        .btn-custom:hover {
            background: linear-gradient(135deg, #2c3e50, #3498db);
            box-shadow: 0 8px 25px rgba(52, 152, 219, 0.4);
            transform: scale(1.05);
        }
</style>

<div class="details-container">
    <h2>Chi tiết sản phẩm</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Tên sản phẩm</th>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>Hình ảnh</th>
                <td><img src="@Url.Content("~/Content/images1/" + Model.Avatar)" alt="Hình ảnh sản phẩm" class="product-image" /></td>
            </tr>
            <tr>
                <th>Danh mục</th>
                <td>@Html.DisplayFor(model => model.CategoryId)</td>
            </tr>
            <tr>
                <th>Mô tả ngắn</th>
                <td>@Html.DisplayFor(model => model.ShortDes)</td>
            </tr>
            <tr>
                <th>Giá</th>
                <td>@Html.DisplayFor(model => model.Price)</td>
            </tr>
            <tr>
                <th>Giá giảm</th>
                <td>@Html.DisplayFor(model => model.PriceDiscount)</td>
            </tr>
            <tr>
                <th>Thương hiệu</th>
                <td>@Html.DisplayFor(model => model.BrandId)</td>
            </tr>
        </tbody>
    </table>

    <div class="action-buttons">
        <a href="@Url.Action("Edit", "Product", new { id = Model.Id })" class="btn-custom">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a href="@Url.Action("ProductList", "Product")" class="btn-custom">
            <i class="fas fa-list"></i> Quay lại danh sách
        </a>
    </div>
</div>
