@model IEnumerable<LeThanhChien_2122110282.Context.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    body {
        background-color: #f4f5f7;
        font-family: 'Helvetica Neue', sans-serif;
    }

    .product-container {
        max-width: 2000px;
        margin: auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        font-size: 28px;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .search-box {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

        .search-box input {
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #ccc;
            width: 300px;
            font-size: 16px;
        }

        .search-box button {
            padding: 12px 20px;
            border-radius: 8px;
            background: linear-gradient(135deg, #3498db, #2c3e50);
            color: #fff;
            font-size: 16px;
            cursor: pointer;
            border: none;
            margin-left: 10px;
            transition: 0.3s ease-in-out;
        }

            .search-box button:hover {
                background: linear-gradient(135deg, #2c3e50, #3498db);
                transform: scale(1.05);
            }

    .table {
        width: 100%;
        border-radius: 10px;
        overflow: hidden;
        background: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: center;
        }

        .table th {
            background-color: #34495e;
            color: #ffffff;
            font-size: 16px;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f7f9fc;
        }

        .table img {
            max-width: 80px;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

    .action-links a {
        display: inline-block;
        margin-right: 8px;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 14px;
        transition: 0.3s;
        text-decoration: none;
    }

        .action-links a:hover {
            transform: scale(1.05);
        }

    .btn-create {
        display: inline-block;
        padding: 12px 24px;
        font-size: 18px;
        border-radius: 8px;
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: #ffffff;
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3);
        text-decoration: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-create:hover {
            background: linear-gradient(135deg, #2c3e50, #3498db);
            box-shadow: 0 8px 25px rgba(52, 152, 219, 0.4);
            transform: scale(1.05);
        }
</style>

<div class="product-container">
    <h2>Danh sách sản phẩm</h2>


    <p>
        <a href="@Url.Action("Create")" class="btn-create">
            <i class="fas fa-plus-circle"></i> Thêm sản phẩm mới
        </a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Danh mục</th>
                <th>Mô tả ngắn</th>
                <th>Giá</th>
                <th>Giá giảm</th>
                <th>Thương hiệu</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td><img src="@Url.Content("~/Content/images1/" + item.Avatar)" alt="Hình ảnh sản phẩm" /></td>
                    <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                    <td>@Html.DisplayFor(modelItem => item.ShortDes)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.PriceDiscount)</td>
                    <td>@Html.DisplayFor(modelItem => item.BrandId)</td>
                    <td class="action-links">
                        <a href="@Url.Action("Details", "Product", new { id = item.Id })" style="color: #3498db;">
                            <i class="fas fa-eye"></i> Xem chi tiết
                        </a>
                        <a href="@Url.Action("Edit", "Product", new { id = item.Id })" style="color: #2ecc71;">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a href="@Url.Action("Delete", "Product", new { id = item.Id })" style="color: #e74c3c;">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
