@model IEnumerable<LeThanhChien_2122110282.Context.Category>

@{
    ViewBag.Title = "Danh sách danh mục";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f4f5f7;
        font-family: 'Helvetica Neue', sans-serif;
    }

    .category-container {
        max-width: 2000px;
        margin: auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        font-size: 28px;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-radius: 10px;
        overflow: hidden;
        background: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: center;
        }

        .table th {
            background-color: #34495e;
            color: #ffffff;
            font-size: 16px;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f7f9fc;
        }

        .table img {
            max-width: 80px;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

    .action-links a {
        display: inline-block;
        margin-right: 8px;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 14px;
        transition: 0.3s;
        text-decoration: none;
    }

        .action-links a:hover {
            transform: scale(1.05);
        }

    .btn-create {
        display: inline-block;
        padding: 12px 24px;
        font-size: 18px;
        border-radius: 8px;
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: #ffffff;
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3);
        text-decoration: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-create:hover {
            background: linear-gradient(135deg, #2c3e50, #3498db);
            box-shadow: 0 8px 25px rgba(52, 152, 219, 0.4);
            transform: scale(1.05);
        }
</style>

<div class="category-container">
    <h2>Danh sách danh mục</h2>

    <p>
        <a href="@Url.Action("Create")" class="btn-create">
            <i class="fas fa-plus-circle"></i> Thêm danh mục mới
        </a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Hình ảnh</th>
                <th>@Html.DisplayNameFor(model => model.Slug)</th>
                <th>@Html.DisplayNameFor(model => model.ShowOnHomePage)</th>
                <th>@Html.DisplayNameFor(model => model.DisplayOrder)</th>
                <th>@Html.DisplayNameFor(model => model.Deleted)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedOnUtc)</th>
                <th>@Html.DisplayNameFor(model => model.UpdatedOnUtc)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td><img src="@Url.Content("~/Content/images1/" + item.Avatar)" alt="Hình ảnh danh mục" /></td>
                    <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                    <td>@Html.DisplayFor(modelItem => item.ShowOnHomePage)</td>
                    <td>@Html.DisplayFor(modelItem => item.DisplayOrder)</td>
                    <td>@Html.DisplayFor(modelItem => item.Deleted)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedOnUtc)</td>
                    <td>@Html.DisplayFor(modelItem => item.UpdatedOnUtc)</td>
                    <td class="action-links">
                        <a href="@Url.Action("Details", "Category", new { id = item.Id })" style="color: #3498db;">
                            <i class="fas fa-eye"></i> Xem chi tiết
                        </a>
                        <a href="@Url.Action("Edit", "Category", new { id = item.Id })" style="color: #2ecc71;">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a href="@Url.Action("Delete", "Category", new { id = item.Id })" style="color: #e74c3c;">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
