@model IEnumerable<LeThanhChien_2122110282.Context.Category>

@{
    ViewBag.Title = "CategoryList";
}

<h2 class="text-center">Tất cả danh mục</h2>

<p class="text-center">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success btn-block shadow-lg" })
</p>

<style>
    .btn-success {
        background-color: #28a745; /* Green color */
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838; /* Darker green on hover */
            border-color: #1e7e34;
        }

    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175); /* Larger shadow */
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        text-align: center;
    }

    .table tbody td {
        text-align: center;
        vertical-align: middle;
    }

    .table img {
        max-width: 100px;
        height: auto;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .table .btn {
        margin: 0 2px;
    }
</style>

<table class="table table-striped table-bordered table-hover shadow">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowOnHomePage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOnUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedOnUtc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@Url.Content("~/Content/images/items/" + item.Avatar)" alt="Avatar" class="img-thumbnail" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowOnHomePage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOnUtc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedOnUtc)
                </td>
                <td>
                    <a href="@Url.Action("Details", "Category", new {id=item.Id})" class="btn btn-sm btn-info">
                        <i class="far fa-eye"></i>
                    </a>
                    <a href="@Url.Action("Edit", "Category", new {id=item.Id})" class="btn btn-sm btn-primary">
                        <i class="far fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Delete", "Category", new {id=item.Id})" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
